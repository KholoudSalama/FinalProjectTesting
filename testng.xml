<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="E-Commerce Automation Test Suite" parallel="tests" thread-count="3">

    <listeners>
        <listener class-name="org.testng.reporters.EmailableReporter"/>
    </listeners>

    <test name="Registration Tests" preserve-order="true">
        <classes>
            <class name="tests.RegisterTests"/>
        </classes>
    </test>

    <test name="Login Tests" preserve-order="true">
        <classes>
            <class name="tests.LoginTests"/>
        </classes>
    </test>

    <test name="Home Page Tests" preserve-order="true">
        <classes>
            <class name="tests.HomePageTests"/>
        </classes>
    </test>

    <test name="Search Tests" preserve-order="true">
        <classes>
            <class name="tests.SearchTests"/>
        </classes>
    </test>

    <test name="Wishlist Tests" preserve-order="true">
        <classes>
            <class name="tests.WishListTests"/>
        </classes>
    </test>

    <test name="Cart Tests" preserve-order="true">
        <classes>
            <class name="tests.CartTests"/>
        </classes>
    </test>

    <test name="Checkout Tests" preserve-order="true">
        <classes>
            <class name="tests.CheckoutTests"/>
        </classes>
    </test>

</suite>